{
  "name": "cureconnect/medical-tourism-portal",
  "description": "Comprehensive Medical Tourism Portal for India - Connecting International Patients with World-Class Healthcare",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "vlucas/phpdotenv": "^5.5",
    "monolog/monolog": "^3.4",
    "twig/twig": "^3.7",
    "symfony/yaml": "^6.3",
    "symfony/http-foundation": "^6.3",
    "symfony/routing": "^6.3",
    "symfony/http-client": "^6.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "CureConnect\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CureConnect\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --testdox --colors=always",
    "phpcs": "phpcs --standard=PSR12 src/",
    "phpstan": "phpstan analyse src --level=8",
    "quality": [
      "@phpcs",
      "@phpstan"
    ],
    "dev-server": "php -S localhost:8000 -t public/"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "secure-http": false,
    "disable-tls": true,
    "github-oauth": {
        "github.com": "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"
    }
  }
}
