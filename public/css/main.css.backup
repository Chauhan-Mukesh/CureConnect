/**
 * CureConnect Medical Tourism Portal - Consolidated CSS
 * Merged from app.css, blog-theme.css, and HTML inline styles
 * Bootstrap 5.3.0+ compatible with medical tourism theme
 */

/* CSS Variables for Theme Consistency */
:root {
    --primary-color: #2c5aa0;
    --secondary-color: #f39c12;
    --success-color: #27ae60;
    --danger-color: #e74c3c;
    --warning-color: #f1c40f;
    --info-color: #3498db;
    --light-color: #f8f9fa;
    --dark-color: #2c3e50;
    --body-bg: #ffffff;
    --text-color: #333333;
    --border-color: #dee2e6;
    --shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    --shadow-lg: 0 1rem 3rem rgba(0, 0, 0, 0.175);
    --border-radius: 0.375rem;
    --font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    
    /* Enhanced theme variables for modern features */
    --transition-speed: 0.3s;
    --border-radius-lg: 1rem;
    --border-radius-md: 0.5rem;
    --gradient-start: var(--primary-color);
    --gradient-end: var(--info-color);
    
    /* Typography support for Poppins from HTML themes */
    --font-family-base: 'Poppins', 'Inter', 'Segoe UI', sans-serif;
}

/* Light/Dark Theme Support */
[data-bs-theme="light"] {
    --bs-body-bg: #f4f7f6;
    --bs-body-color: #212529;
    --bs-tertiary-bg: #ffffff;
    --bs-tertiary-color: #6c757d;
    --bs-border-color: #dee2e6;
    --scrollbar-thumb-color: #d1d1d1;
    --scrollbar-thumb-hover-color: #b1b1b1;
    --footer-bg-color: #f8f9fa;
}

[data-bs-theme="dark"] {
    --bs-body-bg: #0a0f18;
    --bs-body-color: #c9d1d9;
    --bs-tertiary-bg: #161b22;
    --bs-tertiary-color: #8b949e;
    --bs-border-color: #30363d;
    --primary-color: #4a7bc8;
    --scrollbar-thumb-color: #30363d;
    --scrollbar-thumb-hover-color: #484f58;
    --footer-bg-color: #10151d;
}

/* Base Styles */
html {
    scroll-behavior: smooth;
}

body {
    font-family: var(--font-family-base);
    background-color: var(--bs-body-bg);
    color: var(--bs-body-color);
    line-height: 1.6;
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-family-base);
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: 0.75rem;
}

p {
    margin-bottom: 1rem;
    color: var(--text-color);
}

/* Enhanced Button Interactions */
.btn {
    border-radius: var(--border-radius-md);
    font-weight: 500;
    transition: all var(--transition-speed) ease;
}

.btn-primary {
    position: relative;
    overflow: hidden;
    z-index: 1;
    background-color: var(--primary-color);
    border-color: var(--primary-color);
}

.btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(120deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.6s ease;
    z-index: -1;
}

.btn-primary:hover::before {
    left: 100%;
}

.btn-primary:hover {
    background-color: var(--dark-color);
    border-color: var(--dark-color);
    transform: translateY(-2px);
}

.btn-secondary {
    background-color: var(--secondary-color);
    border-color: var(--secondary-color);
}

.btn-outline-primary {
    color: var(--primary-color);
    border-color: var(--primary-color);
}

.btn-outline-primary:hover {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
}

/* Custom Scrollbar */
body::-webkit-scrollbar { 
    width: 10px; 
}

body::-webkit-scrollbar-track { 
    background: var(--bs-body-bg); 
}

body::-webkit-scrollbar-thumb { 
    background-color: var(--scrollbar-thumb-color); 
    border-radius: 10px; 
    border: 2px solid var(--bs-body-bg); 
}

body::-webkit-scrollbar-thumb:hover { 
    background-color: var(--scrollbar-thumb-hover-color); 
}

/* Enhanced Navbar */
.navbar {
    background-color: var(--bs-tertiary-bg);
    border-bottom: 1px solid var(--border-color);
    transition: all var(--transition-speed) ease;
}

.navbar.scrolled {
    background-color: rgba(var(--bs-tertiary-bg-rgb), 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    box-shadow: var(--shadow);
}

.navbar-brand {
    font-weight: 700;
    color: var(--primary-color) !important;
}

.navbar-nav .nav-link {
    position: relative;
    font-weight: 500;
    color: var(--text-color) !important;
    transition: color var(--transition-speed) ease, transform var(--transition-speed) ease;
}

.navbar-nav .nav-link:hover {
    color: var(--primary-color) !important;
    transform: translateY(-2px);
}

.navbar-nav .nav-link.active {
    color: var(--primary-color) !important;
}

@media (max-width: 991.98px) {
    .navbar .navbar-collapse.show {
        background-color: var(--bs-tertiary-bg);
        border-radius: var(--border-radius-md);
        padding: 1rem;
        margin-top: 0.5rem;
        border: 1px solid var(--bs-border-color);
    }
}

/* Back to Top Button */
.back-to-top {
    position: fixed;
    bottom: 20px;
    right: 20px;
    background: var(--primary-color);
    color: white;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-lg);
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition-speed) ease;
    z-index: 1000;
    border: none;
}

.back-to-top.show {
    opacity: 1;
    visibility: visible;
}

.back-to-top:hover {
    background: var(--dark-color);
    transform: translateY(-3px);
}

/* Medical Tourism Specific Styles */
.hero-section {
    background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
    color: white;
    padding: 100px 0;
    position: relative;
    overflow: hidden;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100%" height="100%" fill="url(%23grid)"/></svg>');
    z-index: 1;
}

.hero-section .container {
    position: relative;
    z-index: 2;
}

.feature-card {
    background: var(--bs-tertiary-bg);
    border-radius: var(--border-radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow);
    transition: transform var(--transition-speed) ease, box-shadow var(--transition-speed) ease;
    border: 1px solid var(--border-color);
}

.feature-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-lg);
}

.medical-icon {
    color: var(--primary-color);
    font-size: 3rem;
    margin-bottom: 1rem;
}

/* Form Enhancements */
.form-control {
    border-radius: var(--border-radius-md);
    border: 2px solid var(--border-color);
    transition: border-color var(--transition-speed) ease, box-shadow var(--transition-speed) ease;
    background-color: var(--bs-tertiary-bg);
    color: var(--bs-body-color);
}

.form-control:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.25rem rgba(44, 90, 160, 0.25);
    background-color: var(--bs-tertiary-bg);
}

.form-label {
    font-weight: 500;
    color: var(--text-color);
}

/* Cards and Components */
.card {
    background-color: var(--bs-tertiary-bg);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-lg);
}

.card-header {
    background-color: rgba(var(--primary-color), 0.1);
    border-bottom: 1px solid var(--border-color);
}

/* Footer */
.footer {
    background-color: var(--footer-bg-color);
    border-top: 1px solid var(--border-color);
    padding: 3rem 0 1rem;
    margin-top: auto;
}

/* Theme Toggle Button */
.theme-toggle {
    border: none;
    background: none;
    color: inherit;
    padding: 0.375rem;
    border-radius: var(--border-radius);
    transition: background-color var(--transition-speed) ease;
}

.theme-toggle:hover {
    background-color: var(--bs-border-color);
}

.theme-toggle-icon {
    transition: transform 0.3s ease;
}

.theme-toggle-icon.animating {
    transform: rotate(180deg);
}

/* Animation Classes */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.fade-in-up {
    animation: fadeInUp 0.6s ease-out;
}

@keyframes slideInLeft {
    from {
        opacity: 0;
        transform: translateX(-30px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.slide-in-left {
    animation: slideInLeft 0.6s ease-out;
}

/* Responsive Design Enhancements */
@media (max-width: 768px) {
    .hero-section {
        padding: 60px 0;
    }
    
    .feature-card {
        margin-bottom: 2rem;
    }
    
    .hero-section h1 {
        font-size: 2.5rem;
    }
}

@media (max-width: 576px) {
    .hero-section h1 {
        font-size: 2rem;
    }
    
    .container {
        padding-left: 1rem;
        padding-right: 1rem;
    }
}

/* Loading States */
.loading-spinner {
    display: inline-block;
    width: 1rem;
    height: 1rem;
    border: 2px solid var(--border-color);
    border-top: 2px solid var(--primary-color);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Toast Notifications */
.toast-container {
    z-index: 1080;
}

/* Search Results */
.search-result-item:hover {
    background-color: var(--bs-tertiary-bg);
}

/* Lazy Loading Images */
img.lazy {
    opacity: 0;
    transition: opacity 0.3s;
}

img.lazy:not(.lazy) {
    opacity: 1;
}

/* Print Styles */
@media print {
    .navbar,
    .back-to-top,
    .theme-toggle {
        display: none !important;
    }
    
    body {
        color: black !important;
        background: white !important;
    }
}