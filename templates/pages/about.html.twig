{% extends 'base.html.twig' %}

{% block main %}
<main id="main-content">
    <!-- Breadcrumb -->
    <nav class="breadcrumb-custom">
        <div class="container">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="{{ base_url }}">Home</a></li>
                <li class="breadcrumb-item active">About Us</li>
            </ol>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <h1 class="display-4 fw-bold mb-4 fade-in-up">
                            Connecting You to World-Class Healthcare
                        </h1>
                        <p class="lead mb-4 fade-in-up" style="animation-delay: 0.2s;">
                            CureConnect is India's premier medical tourism platform, bridging the gap between international patients and top-tier healthcare providers across the country.
                        </p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-image fade-in-right">
                        <img src="{{ assets_url }}/images/about-hero.jpg"
                             alt="About CureConnect"
                             class="img-fluid rounded shadow-lg"
                             loading="lazy">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Mission & Vision -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="card h-100 hover-lift">
                        <div class="card-body p-4">
                            <div class="feature-icon mb-3">
                                <i class="fas fa-bullseye"></i>
                            </div>
                            <h3 class="card-title">Our Mission</h3>
                            <p class="card-text">
                                To make high-quality, affordable healthcare accessible to patients worldwide by connecting them with India's finest medical institutions and specialists.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mb-4">
                    <div class="card h-100 hover-lift">
                        <div class="card-body p-4">
                            <div class="feature-icon mb-3">
                                <i class="fas fa-eye"></i>
                            </div>
                            <h3 class="card-title">Our Vision</h3>
                            <p class="card-text">
                                To position India as the global leader in medical tourism by providing seamless, transparent, and patient-centric healthcare experiences.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why Choose Us -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center mb-5">
                    <h2 class="display-5 fw-bold animate-on-scroll">
                        Why Choose CureConnect?
                    </h2>
                    <p class="lead text-muted animate-on-scroll">
                        We provide comprehensive support throughout your medical journey
                    </p>
                </div>
            </div>
            <div class="row stagger-animation">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="feature-box text-center">
                        <div class="feature-icon">
                            <i class="fas fa-hospital"></i>
                        </div>
                        <h5>Verified Hospitals</h5>
                        <p class="text-muted">All hospitals are JCI/NABH accredited with international standards</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="feature-box text-center">
                        <div class="feature-icon">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <h5>Expert Doctors</h5>
                        <p class="text-muted">Highly qualified specialists with international training and experience</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="feature-box text-center">
                        <div class="feature-icon">
                            <i class="fas fa-headset"></i>
                        </div>
                        <h5>24/7 Support</h5>
                        <p class="text-muted">Round-the-clock assistance throughout your medical journey</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact CTA -->
    <section class="py-5 bg-primary text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h3 class="fw-bold mb-2 animate-on-scroll">
                        Ready to Begin Your Medical Journey?
                    </h3>
                    <p class="mb-0 animate-on-scroll">
                        Contact our medical experts for personalized consultation and treatment planning.
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end animate-on-scroll">
                    <a href="{{ base_url }}/contact" class="btn btn-light btn-lg">
                        Contact Us Now
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
