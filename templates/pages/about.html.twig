{% extends 'base.html.twig' %}

{% block head %}
    <!-- AOS (Animate on Scroll) Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <!-- Blog Theme CSS -->
    <link rel="stylesheet" href="{{ assets_url }}/css/blog-theme.css">
{% endblock %}

{% block main %}
<main>
    <!-- Page Header -->
    <header class="page-header text-center">
        <div class="container">
            <h1 class="display-4">{{ page.title|default('Our Story') }}</h1>
            <p class="lead col-lg-8 mx-auto">{{ page.description|default("We're a passionate team of creators, thinkers, and tech enthusiasts dedicated to exploring the ideas that shape our world.") }}</p>
        </div>
    </header>

    <div class="container-xl mt-5 pt-4">
        <!-- Our Mission Section -->
        <section class="my-5 py-5">
            <div class="row align-items-center">
                <div class="col-lg-6" data-aos="fade-right">
                    <h2 class="display-5 mb-4">{{ about.mission.title|default('Our Mission') }}</h2>
                    <p class="lead">{{ about.mission.description|default('To create a space for curiosity. We believe that great ideas come from exploring the intersections of technology, creativity, and everyday life. Our goal is to deliver insightful, engaging, and well-researched content that sparks conversation and inspires new perspectives.') }}</p>
                    <p>{{ about.mission.details|default("We're not just a blog; we're a community for those who love to learn, question, and grow. Whether you're a developer, a designer, a student, or just a curious soul, you'll find something here to fuel your passion.") }}</p>
                </div>
                <div class="col-lg-6" data-aos="fade-left">
                    <img src="{{ about.mission.image|default('https://images.unsplash.com/photo-1521737604893-d14cc237f11d?q=80&w=1484&auto=format&fit=crop') }}" 
                         class="img-fluid rounded-4 shadow" 
                         alt="{{ about.mission.image_alt|default('Team collaborating') }}">
                </div>
            </div>
        </section>

        <!-- Meet the Team Section -->
        <section class="my-5 py-5 bg-body-tertiary rounded-4">
            <div class="container-xl">
                <div class="text-center mb-5 pb-3">
                    <h2 class="display-5" data-aos="fade-up">{{ about.team.title|default('Meet the Team') }}</h2>
                    <p class="lead col-lg-6 mx-auto" data-aos="fade-up" data-aos-delay="100">{{ about.team.subtitle|default('The minds behind the magic.') }}</p>
                </div>
                <div class="row justify-content-center">
                    {% set default_team_members = [
                        {
                            name: 'Jane Doe',
                            position: 'Founder & Lead Editor',
                            description: 'Jane is the visionary behind YourBlog, with a passion for storytelling and a knack for finding the signal in the noise. She leads our content strategy and ensures every article meets our high standards.',
                            avatar: 'https://i.pravatar.cc/120?u=jane',
                            social: {
                                twitter: '#',
                                linkedin: '#'
                            }
                        },
                        {
                            name: 'Alex Smith',
                            position: 'Lead Developer & Tech Writer',
                            description: 'Alex is the technical wizard who built this platform from the ground up. When not coding, he\'s writing deep dives into the latest software development trends and AI breakthroughs.',
                            avatar: 'https://i.pravatar.cc/120?u=alex',
                            social: {
                                github: '#',
                                linkedin: '#'
                            }
                        }
                    ] %}
                    
                    {% for member in about.team.members|default(default_team_members) %}
                    <div class="col-lg-4 col-md-6 mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 + 200 }}">
                        <div class="team-member text-center h-100">
                            <img src="{{ member.avatar }}" 
                                 class="rounded-circle shadow-sm mb-3" 
                                 alt="Team Member {{ member.name }}"
                                 style="width: 120px; height: 120px; object-fit: cover;">
                            <div class="p-4">
                                <h4 class="mb-1">{{ member.name }}</h4>
                                <p class="text-primary mb-2">{{ member.position }}</p>
                                <p class="text-muted">{{ member.description }}</p>
                                <div class="social-icons fs-4 mt-3">
                                    {% if member.social.twitter %}
                                        <a href="{{ member.social.twitter }}" class="me-2" aria-label="Twitter"><i class="bi bi-twitter-x"></i></a>
                                    {% endif %}
                                    {% if member.social.linkedin %}
                                        <a href="{{ member.social.linkedin }}" class="me-2" aria-label="LinkedIn"><i class="bi bi-linkedin"></i></a>
                                    {% endif %}
                                    {% if member.social.github %}
                                        <a href="{{ member.social.github }}" class="me-2" aria-label="GitHub"><i class="bi bi-github"></i></a>
                                    {% endif %}
                                    {% if member.social.instagram %}
                                        <a href="{{ member.social.instagram }}" class="me-2" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </section>

        <!-- Call to Action Section -->
        <section class="my-5 py-5" data-aos="zoom-in">
            <div class="hero-banner text-center">
                <h2 class="display-5">{{ about.cta.title|default('Join Our Community') }}</h2>
                <p class="lead my-3">{{ about.cta.description|default('Stay updated with our latest articles, insights, and behind-the-scenes content.') }}</p>
                <a href="{{ about.cta.link|default('/contact') }}" class="btn btn-gradient btn-lg">
                    {{ about.cta.button_text|default('Subscribe Now') }}
                </a>
            </div>
        </section>
    </div>
</main>
{% endblock %}

{% block scripts %}
    <!-- AOS Script -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <!-- Blog Theme JavaScript -->
    <script src="{{ assets_url }}/js/blog-theme.js"></script>
{% endblock %}
