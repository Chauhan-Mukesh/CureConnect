{% extends 'base.html.twig' %}

{% block main %}
<main id="main-content">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <h1 class="display-4 fw-bold mb-4 fade-in-up">
                            World-Class Healthcare in India
                        </h1>
                        <p class="lead mb-4 fade-in-up" style="animation-delay: 0.2s;">
                            Experience affordable, high-quality medical treatments with our comprehensive medical tourism services. Connect with top hospitals and specialists across India.
                        </p>
                        <div class="hero-buttons fade-in-up" style="animation-delay: 0.4s;">
                            <a href="#treatments" class="btn btn-primary btn-lg me-3">
                                Explore Treatments
                            </a>
                            <a href="/contact" class="btn btn-outline-light btn-lg">
                                Get Free Consultation
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-image fade-in-right">
                        <img src="{{ assets_url }}/images/hero-medical.jpg"
                             alt="Medical Tourism India"
                             class="img-fluid rounded shadow-lg"
                             loading="lazy">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Statistics Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row text-center stagger-animation">
                <div class="col-md-3 mb-4">
                    <div class="feature-box">
                        <div class="stats-counter" data-count="{{ statistics.medical_tourists }}">0</div>
                        <h5>Medical Tourists</h5>
                        <p class="text-muted">Visited India in 2024</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="feature-box">
                        <div class="stats-counter" data-count="{{ statistics.cost_savings }}">0</div>
                        <h5>Cost Savings</h5>
                        <p class="text-muted">Up to {{ statistics.cost_savings }}% less than Western countries</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="feature-box">
                        <div class="stats-counter" data-count="{{ statistics.hospitals }}">0</div>
                        <h5>Top Hospitals</h5>
                        <p class="text-muted">JCI & NABH accredited facilities</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="feature-box">
                        <div class="stats-counter" data-count="{{ statistics.countries }}">0</div>
                        <h5>Countries</h5>
                        <p class="text-muted">Medical visa support available</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Treatments -->
    <section id="treatments" class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center mb-5">
                    <h2 class="display-5 fw-bold animate-on-scroll">
                        Popular Medical Treatments
                    </h2>
                    <p class="lead text-muted animate-on-scroll">
                        Discover world-class medical specialties with significant cost advantages
                    </p>
                </div>
            </div>
            <div class="row stagger-animation">
                {% for treatment in featured_treatments %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="treatment-card hover-lift">
                        <div class="treatment-icon">
                            <i class="{{ treatment.icon }}"></i>
                        </div>
                        <h4>{{ treatment.title }}</h4>
                        <p class="text-muted">{{ treatment.description }}</p>
                        <div class="price-comparison">
                            <div class="d-flex justify-content-between">
                                <span>India:</span>
                                <strong class="text-success">₹{{ treatment.india_cost|number_format }}</strong>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>USA:</span>
                                <span class="text-decoration-line-through">₹{{ treatment.usa_cost|number_format }}</span>
                            </div>
                            <span class="savings-badge">Save {{ treatment.savings }}%</span>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="text-center mt-5 animate-on-scroll">
                <a href="/treatments" class="btn btn-primary btn-lg">
                    View All Treatments
                </a>
            </div>
        </div>
    </section>

    <!-- Why Choose India -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center mb-5">
                    <h2 class="display-5 fw-bold animate-on-scroll">
                        Why Choose India for Medical Tourism?
                    </h2>
                </div>
            </div>
            <div class="row stagger-animation">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="feature-box text-center">
                        <div class="feature-icon">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                        <h5>Cost Effective</h5>
                        <p class="text-muted">Save 30-70% on medical treatments without compromising on quality</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="feature-box text-center">
                        <div class="feature-icon">
                            <i class="fas fa-award"></i>
                        </div>
                        <h5>World-Class Quality</h5>
                        <p class="text-muted">JCI and NABH accredited hospitals with international standards</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="feature-box text-center">
                        <div class="feature-icon">
                            <i class="fas fa-language"></i>
                        </div>
                        <h5>English Speaking</h5>
                        <p class="text-muted">Multilingual medical staff and easy communication</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="feature-box text-center">
                        <div class="feature-icon">
                            <i class="fas fa-plane"></i>
                        </div>
                        <h5>Easy Visa Process</h5>
                        <p class="text-muted">e-Medical visa for 156+ countries with streamlined process</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-5 bg-primary text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h3 class="fw-bold mb-2 animate-on-scroll">
                        Ready to Start Your Medical Journey?
                    </h3>
                    <p class="mb-0 animate-on-scroll">
                        Get personalized treatment recommendations and cost estimates from our medical experts.
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end animate-on-scroll">
                    <a href="/contact" class="btn btn-light btn-lg">
                        Get Free Consultation
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}

{% block scripts %}
<script>
// Initialize page-specific functionality
document.addEventListener('DOMContentLoaded', function() {
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
});
</script>
{% endblock %}
